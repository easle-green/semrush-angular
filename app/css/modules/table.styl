.table

  &.table-bordered
    border-width 0 0 1px 0
    > thead > tr > th
      border-top 0
      &:first-child
        border-left 0
      &:last-child
        border-left 0
        border-right 0
      &:nth-last-child(2)
        border-right 0

  tbody
    td
      vertical-align top
      font-size 1.4em
    img
      width 150px
      cursor pointer


  &__favorited
    color #563d7c
    font-size 1.2em